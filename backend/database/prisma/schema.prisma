generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Eleicao {
  id          String      @id @default(uuid())
  nome        String
  descricao   String?
  ativa       Boolean     @default(false)
  status      String      @default("Criada") // Criada, Ativa, Encerrada
  chapas      Chapa[]
  eleitores   Eleitor[]
  credenciais Credencial[]
  votos       Voto[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Chapa {
  id          String   @id @default(uuid())
  nome        String
  numero      Int
  eleicaoId   String
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  votos       Voto[]
  @@unique([numero, eleicaoId])
}

model Eleitor {
  id          String   @id @default(uuid())
  nome        String
  matricula   String
  curso       String
  eleicaoId   String
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  credenciais Credencial[]
  jaVotou     Boolean  @default(false)
  @@unique([matricula, eleicaoId])
} 

model Credencial {
  id          String   @id @default(uuid())
  eleitorId   String
  eleicaoId   String
  token       String   @unique
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  eleitor     Eleitor @relation(fields: [eleitorId], references: [id])
  usada       Boolean  @default(false)
  expiresAt   DateTime
  createdAt   DateTime @default(now())
}

model Voto {
  id          String   @id @default(uuid())
  eleicaoId   String
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  chapaId     String?
  chapa       Chapa?   @relation(fields: [chapaId], references: [id])
  tipo        String   @default("valido") // valido, branco, nulo
  timestamp   DateTime @default(now())
}

model Administrador {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
}

model Mesario {
  id        String   @id @default(uuid())
  nome      String
  usuario   String   @unique
  senha     String
  createdAt DateTime @default(now())
}
