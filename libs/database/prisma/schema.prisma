generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Eleicao {
  id          String      @id @default(uuid())
  nome        String
  chapas      Chapa[]
  eleitores   Eleitor[]
  credenciais Credencial[]
  votos       Voto[]
}

model Chapa {
  id          String   @id @default(uuid())
  nome        String
  eleicaoId   String
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  votos       Voto[]
}

model Eleitor {
  id          String   @id @default(uuid())
  nome        String
  eleicaoId   String
  matricula   String   @unique
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  credenciais Credencial[]
  jaVotou     Boolean  @default(false)
} 

model Credencial {
  id          String   @id @default(uuid())
  eleitorId   String
  eleicaoId   String
  token       String   @unique
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  eleitor     Eleitor @relation(fields: [eleitorId], references: [id])
  usada       Boolean  @default(false)
  @@unique([eleitorId, eleicaoId])
}

model Voto {
  id          String   @id @default(uuid())
  eleicaoId   String
  eleicao     Eleicao @relation(fields: [eleicaoId], references: [id])
  chapaId     String
  chapa       Chapa    @relation(fields: [chapaId], references: [id])
  timestamp   DateTime @default(now())
}

model Usuario {
  id          String   @id @default(uuid())
  usuario     String   @unique
  senha       String
  papel       String
}
